@{
    ViewBag.Title = "Chat";
}

<h2>Chat</h2>
<div class="row">
    <div class="col-md-4">
        <button id="showcon">Show all connections</button>
        <h3>Users online: </h3>
        <ul id="user"></ul>
    </div>
    <div class="col-md-4">
        <br />
        <input type="text" id="txt" class="form-control" />
        <button id="send" class="btn btn-warning">Send</button>
    </div>
    <div class="col-md-4">
        <h3>Messages</h3>
        <ul id="message"></ul>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery.signalR-2.4.1.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/app/app.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
}